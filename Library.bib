	doi = {10.1016/j.biopsych.2016.08.024},
	file = {ScienceDirect Full Text PDF:/Users/martinale-bertheyl/Zotero/storage/4SK2PT4P/Vuong and Hsiao - 2017 - Emerging Roles for the Gut Microbiome in Autism Sp.pdf:application/pdf;ScienceDirect Full Text PDF:/Users/martinale-bertheyl/Zotero/storage/SWG28SKX/Vuong and Hsiao - 2017 - Emerging Roles for the Gut Microbiome in Autism Sp.pdf:application/pdf},
