	journal = {Stochastic Environmental Research and Risk Assessment},
	language = {en},
	month = nov,
	number = {11},
	pages = {4479--4498},
	shorttitle = {Modeling spatial dependencies of natural hazards in coastal regions},
	title = {Modeling spatial dependencies of natural hazards in coastal regions: a nonstationary approach with barriers},
	url = {https://link.springer.com/10.1007/s00477-023-02519-9},
	urldate = {2024-01-12},
