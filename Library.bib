	file = {ScienceDirect Snapshot:/Users/martinale-bertheyl/Zotero/storage/PDRHNPJ8/S1462901119310792.html:text/html;ScienceDirect Snapshot:/Users/martinale-bertheyl/Zotero/storage/ENY7B4WR/S1462901119310792.html:text/html},
	issn = {1462-9011},
	journal = {Environmental Science \& Policy},
	keywords = {Conflict-generating project, High Conservation Value Areas, Public policies, Socio-environmental conflict, Threat to biodiversity},
	language = {en},
	month = aug,
	pages = {46--59},
	shorttitle = {Socio-environmental conflicts},
	title = {Socio-environmental conflicts: {An} underestimated threat to biodiversity conservation in {Chile}},
	url = {https://www.sciencedirect.com/science/article/pii/S1462901119310792},
	urldate = {2022-04-04},
