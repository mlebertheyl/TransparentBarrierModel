	url = {https://bioone.org/journals/journal-of-wildlife-management/volume-73/issue-1/2007-468/Effects-of-Tidal-and-Diel-Cycles-on-Dugong-Habitat-Use/10.2193/2007-468.full},
	urldate = {2023-04-06},
